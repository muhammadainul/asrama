<div class="card">
    <div class="card-header">
        <i class="fa fa-comments"></i> <strong class="card-title">Data Keluhan</strong>
    </div>
    <div class="card-body">
        <div class="row form-group">
            <div class="col-2">
                <label for="idAsrama" class="label">Asrama </label>
                <select name="id_asrama" id="idAsrama" class="form-control">
                    <option value="">Asrama</option>
                    <% asrama.forEach(row => { %>
                        <option value="<%= row.id %>"><%= row.nama_asrama %></option>
                    <% }) %>
                </select>
            </div>
            <div class="col-3">
                <label for="status" class="label">Status </label>
                <select name="status" id="status" class="form-control">
                    <option value="">Status Keluhan</option>
                    <option value="0">Belum diproses</option>
                    <option value="1">Sudah diproses</option>
                </select>
            </div>
            <div class="col-6">
                <label for="startDate" class="form-control-label">Tanggal <i></i></label>
                <div id="searchByDate" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                    <i class="fa fa-calendar"></i>&nbsp;
                    <span id="dateSpan"></span> <i class="fa fa-caret-down"></i>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <button style="padding: 5px 20px;" class="btn btn-outline-primary" id="buttonFilterKeluhan">
                <i class="fa fa-search"></i> Filter</button>
            </div>
        </div>
        <br>
        <table id="datatableKeluhan" class="table table-hover table-striped table-hover table-bordered" width="100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Asrama</th>
                    <th>Kamar</th>
                    <th>Nama</th>
                    <th>Keluhan</th>
                    <th>Tanggal</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>