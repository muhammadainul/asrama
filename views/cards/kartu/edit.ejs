<div class="card">
    <div class="card-header">
        <i class="fa fa-id-card"></i><strong> Edit Data</strong> Kartu
    </div>
    <div class="card-body card-block">        
        <form action="/kartu/edit/editkartu" method="post" class="form-horizontal">
            <% if (errors) { %>
                <div class="sufee-alert alert with-close alert-danger alert-dismissible">
                    <span class="badge badge-pill badge-danger">Gagal</span>
                    <%= typeof errors !== 'undefined' ? errors : '' %>
                    <button type="button" class="close" id="errors" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% } %>
            <% if (success) { %>
                <div class="sufee-alert alert with-close alert-success alert-dismissible" role="alert">
                    <span class="badge badge-pill badge-success">Sukses</span>
                    <span style="text-align: center;"><%= typeof success !== 'undefined' ? success : '' %></span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <meta http-equiv="refresh" content="3;URL='/kartu'" />
            <% } %>
            <div class="row form-group">
                <div class="col col-3">
                    <label for="nama_asrama-input" class=" form-control-label">RFID</label>
                    <input type="hidden" value="<%= typeof result.id !== 'undefined' ? result.id : '' %>" name="id">
                    <input type="hidden" value="<%= typeof result.rfid !== 'undefined' ? result.rfid : '' %>" name="rfid">
                    <% if (result.id_kamar !== null) { %>
                        <input type="hidden" value="<%= typeof result.id_kamar !== 'undefined' ? result.id_kamar : '' %>" name="id_kamar">
                    <% } %>
                </div>
                <div id="newForm" class="col col-7">
                    <input disabled autocomplete="off" value="<%= typeof result.rfid !== 'undefined' ? result.rfid : '' %>" type="text" id="rfid" value="<%= typeof rfid != 'undefined' ? rfid : '' %>" name="rfid" placeholder="RFID.." class="form-control" required="required">
                    <input type="hidden" value="1" id="totalForm">
                </div>
                <% if (result.id_kamar !== null) { %>
                    <div class="col col-2">
                        <button id="addBtn" type="button" class="btn btn-primary">Ubah</button>
                    </div>
                <% } %>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="disabled-input" class=" form-control-label">Pilih Kamar</label>
                </div>
                <div class="col-12 col-md-9">
                    <% if (result.id_kamar !== null) { %>
                        <select name="id_kamar" class="form-control selectpicker" data-live-search="true" disabled>
                            <option value="">Pilih Kamar</option>
                            <% kamar.forEach(row => { %>
                                <option value="<%= row.id %>" data-tokens="<%= row.id %>" <% if (row.id == result.id_kamar) { %> selected <% } %>><%= row.nama_kamar %> <%= row.nama_asrama %></option>
                            <% }) %>   
                        </select>
                    <% } else { %>
                        <select name="id_kamar" class="form-control selectpicker" data-live-search="true">
                            <option value="">Pilih Kamar</option>
                            <% kamar.forEach(row => { %>
                                <option value="<%= row.id %>" data-tokens="<%= row.id %>" <% if (row.id == result.id_kamar) { %> selected <% } %>><%= row.nama_kamar %> <%= row.nama_asrama %></option>
                            <% }) %>   
                        </select>
                    <% } %>
                </div>
            </div>
            <div class="form-group">
                <div class="col col-md-3">
                    <input type="hidden" name="browser" id="browser" value="">
                    <input type="hidden" name="browser_version" id="browser_version" value="">
                    <input type="hidden" name="os" id="os" value="">
                </div>
                <div class="col col-md-7">
                    <a href="/kartu" class="btn btn-outline-success"><i class="fa fa-angle-left"></i> Kembali</a>
                    <button type="submit" class="btn btn-outline-primary openActionEditKartu"><i class="fa fa-save"></i> Simpan</button>
                    <button type="reset" class="btn btn-outline-danger"><i class="fa fa-ban"></i> Reset</button>
                </div>
            </div>
        </form>
    </div>
</div>