<div class="card">
    <div class="card-header">
        <i class="fa fa-university"></i><strong> Edit Data</strong> Asrama
    </div>
    <div class="card-body card-block">        
        <form action="/asrama/edit/editasrama" method="post" enctype="multipart/form-data" class="form-horizontal">
            <% if (errors) { %>
                <div class="sufee-alert alert with-close alert-danger alert-dismissible">
                    <span class="badge badge-pill badge-danger">Failed</span>
                    <%= typeof errors !== 'undefined' ? errors : '' %>
                    <button type="button" class="close" id="errors" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% } %>
            <% if (success) { %>
                <div class="sufee-alert alert with-close alert-success alert-dismissible" role="alert">
                    <span class="badge badge-pill badge-success">Success</span>
                    <span style="text-align: center;"><%= typeof success !== 'undefined' ? success : '' %></span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <meta http-equiv="refresh" content="3;URL='/asrama'" />
            <% } %>
            <div class="row form-group">
                <div class="col col-md-3"><label class=" form-control-label">ID</label></div>
                <div class="col-12 col-md-9">
                    <input class="form-control" type="text" value="<%= asrama.id %>" disabled />
                    <input type="hidden" name="id" value="<%= asrama.id %>" id="id">
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="nama_asrama-input" class=" form-control-label">Nama Asrama</label>
                </div>
                <div class="col-12 col-md-9">
                    <input type="text" id="nama_asrama" value="<%= asrama.nama_asrama %>" name="nama_asrama" placeholder="Nama asrama.." class="form-control" required="required">
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="jumlah_kamar-input" class=" form-control-label">Jumlah Kamar</label>
                </div>
                <div class="col-12 col-md-9">
                    <input type="number" id="jumlah_kamar" value="<%= asrama.jumlah_kamar %>" name="jumlah_kamar" placeholder="Jumlah kamar.." class="form-control" required>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="jumlah_lantai-input" class=" form-control-label">Jumlah Lantai</label>
                </div>
                <div class="col-12 col-md-9">
                    <input type="number" id="jumlah_lantai" value="<%= asrama.jumlah_lantai %>" name="jumlah_lantai" placeholder="Jumlah lantai.." class="form-control" required>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="disabled-input" class=" form-control-label">Fasilitas</label>
                </div>
                <div class="col-12 col-md-9">
                    <textarea name="fasilitas" id="fasilitas" rows="9" placeholder="Fasilitas.." class="form-control"><%= asrama.fasilitas %></textarea>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="select" class=" form-control-label">Gambar</label>
                </div>
                <div class="col-12 col-md-9">
                    <img src="/images/uploads/<%= asrama.files.filename %>" alt="gambar" style="width: 20%;">
                    <input type="hidden" name="idGambar" id="idGambar" value="<%= asrama.files.id %>">
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <span>&nbsp;</span>
                </div>
                <div class="col 12 col-md-4">
                    <input type="file" name="gambar" class="form-control" onchange="readURL(this)" id="gambar" accept="image/jpeg, image/jpg, image/png">
                    <span>&nbsp;</span>
                    <div class="preview-images">
                        <img id="previewImg">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col col-md-3">
                    <input type="hidden" name="browser" id="browser" value="">
                    <input type="hidden" name="browser_version" id="browser_version" value="">
                    <input type="hidden" name="os" id="os" value="">
                </div>
                <div class="col-12 col-md-9">
                    <a href="/asrama" class="btn btn-outline-success"><i class="fa fa-angle-left"></i> Kembali</a>
                    <button type="submit" class="btn btn-outline-primary openActionEditAsrama"><i class="fa fa-save"></i> Simpan</button>
                    <button type="reset" class="btn btn-outline-danger"><i class="fa fa-ban"></i> Reset</button>
                </div>
            </div>
        </form>
    </div>
</div>