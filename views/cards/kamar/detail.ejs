<div class="card text-center">
    <div class="card-header">
        <i class="fa fa-bed"></i> <strong class="card-title">Detail Kamar</strong>
    </div>
    <div class="card-body">
        <div class="card-title"><b>Asrama : </b><span class="badge badge-success"><i class="fa fa-university"></i> <%= typeof kamar.nama_asrama != 'undefined' ? kamar.nama_asrama : '' %></span></div>
        <div class="card-title"><b>Nomor Kamar : </b><%= typeof kamar.nama_kamar != 'undefined' ? kamar.nama_kamar : '' %></div>
        <div class="card-title"><b>Lantai : </b><%= typeof kamar.lantai != 'undefined' ? kamar.lantai : '' %></div>
        <div class="card-text"><b>Kapasitas : </b><%= typeof kamar.kapasitas != 'undefined' ? kamar.kapasitas : '' %> Orang</div>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <strong class="card-title">Asset Kamar</strong>
    </div>
    <div class="card-body">
            <table class="table display responsive table-hover table-bordered" id="dataTables" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Nama Asset</th>
                        <th>Kategori</th>
                        <th>Gambar</th>
                    </tr>
                </thead>
                <tbody>
                    <% asset.forEach(row => { %>
                        <tr>
                            <td style="width: 20%;"><%= row.nama_asset %></td>
                            <td><%= row.nama_kategori %></td>
                            <td><img src="/images/uploads/<%= row.filename %>" style="width: 10%;"></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
    </div>
</div>
<% if (result.length == 0) { %>
    <div class="row text-center">
        <div class="col-sm-12">
            <div class="card bg-light">
                <div class="card-body">
                    <span>Kamar Kosong</span> 
                </div>  
            </div>
        </div>
    </div>
<% } else { %>
    <div class="row">
        <div class="col-sm-6">
            <div class="card bg-light mb-3">
                <div class="card-header"><b>Penghuni 1</b></div>
                <div class="card-body">
                    <b>Nama : </b><p class="card-text"><%= typeof result[0].nama_lengkap != 'undefined' ? result[0].nama_lengkap : '' %></p>
                    <b>NIK : </b><p class="card-text"><%= typeof result[0].nik != 'undefined' ? result[0].nik : '' %></p>
                    <b>NIP : </b><p class="card-text"><%= typeof result[0].nip != 'undefined' ? result[0].nip : '' %></p>
                    <b>Jenis Kelamin : </b>
                        <% if(result[0].jenis_kelamin == 'p') { %> <p class="card-text">Perempuan</p> <% } else if (result[0].jenis_kelamin == 'l') { %> <p class="card-text">Laki-laki</p> <% } %>
                    <b>Alamat : </b><p class="card-text"><%= typeof result[0].alamat != 'undefined' ? result[0].alamat : '' %></p>
                    <b>No Telepon : </b><p class="card-text"><%= typeof result[0].no_telepon != 'undefined' ? result[0].no_telepon : '' %></p>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card bg-light mb-3">
                <div class="card-header"><b>Penghuni 2</b></div>
                <div class="card-body">
                    <% if(result[1] == null) { %>
                        <b>No data</b>
                    <% } else { %>
                        <b>Nama : </b><p class="card-text"><%= typeof result[1].nama_lengkap != 'undefined' ? result[1].nama_lengkap : '' %></p>
                        <b>NIK : </b><p class="card-text"><%= typeof result[1].nik != 'undefined' ? result[1].nik : '' %></p>
                        <b>NIP : </b><p class="card-text"><%= typeof result[1].nip != 'undefined' ? result[1].nip : '' %></p>
                        <b>Jenis Kelamin : </b>
                            <% if(result[1].jenis_kelamin == 'p') { %> <p class="card-text">Perempuan</p> <% } else if (result[1].jenis_kelamin == 'l') { %> <p class="card-text">Laki-laki</p> <% } %>
                        <b>Alamat : </b><p class="card-text"><%= typeof result[1].alamat != 'undefined' ? result[1].alamat : '' %></p>
                        <b>No Telepon : </b><p class="card-text"><%= typeof result[1].no_telepon != 'undefined' ? result[1].no_telepon : '' %></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
<% } %>
<div class="row">
    <div class="col-sm-6">
        <a href="/kamar" class="btn btn-outline-success"><i class="fa fa-angle-left"></i> Kembali</a>
    </div>
</div>